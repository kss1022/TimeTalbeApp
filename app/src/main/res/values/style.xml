<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Suwon_University_Community.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimaryVariant</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Suwon_University_Community.Toolbar.TitleTextAppearance"  parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Widget.Suwon_University_Community.Toolbar.WithArrow" parent="Widget.Suwon_University_Community.Toolbar">
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
    </style>


    <style name="Widget.Suwon_University_Community.Toolbar.WithClose" parent="Widget.Suwon_University_Community.Toolbar">
        <item name="navigationIcon">@drawable/ic_baseline_close_24</item>
    </style>


    <style name="Widget.Suwon_University_Community.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_24</item>
    </style>


    <style name="Widget.Suwon_University_Community.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/colorOnPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">24dp</item>
    </style>


    <style name="Widget.Suwon_University_Community.checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/text_filter_checkbox</item>
        <item name="android:background">@drawable/bg_filter_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

</resources>