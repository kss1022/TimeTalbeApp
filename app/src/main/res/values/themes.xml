<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suwon_University_Community" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
        <!--ToolBar-->
        <item name="toolbarStyle">@style/Widget.Suwon_University_Community.Toolbar</item>
        <item name="toolbarWithArrowButtonStyle">
            @style/Widget.Suwon_University_Community.Toolbar.WithArrow
        </item>
        <item name="toolbarWithCloseButtonStyle">
            @style/Widget.Suwon_University_Community.Toolbar.WithClose
        </item>

        <!--AlertDialog-->
        <item name="android:alertDialogTheme">@style/Widget.Suwon_University_Community.AlertDialogStyle</item>

        <!--NavigationBarColor  60% WHITE-->
        <item name="android:navigationBarColor">#99FFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Suwon_University_Community.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Suwon_University_Community.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Suwon_University_Community.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>